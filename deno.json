{
  "imports": {},
  "tasks": {
    "start": "deno run -A main.ts"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "exclude": [
    "node_modules",
    "static/",
    "README.md",
    "_fresh",
    "**/_fresh/*",
    ".deco/**"
  ],
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "nodeModulesDir": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "experimentalDecorators": true
  }
}
